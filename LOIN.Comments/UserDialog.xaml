<Window x:Class="LOIN.Comments.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LOIN.Comments"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        MinWidth="250"
        Name="self"
        WindowStartupLocation="CenterOwner"
        Title="Uživatel" >
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <TextBlock Padding="5">Zadejte prosím Váš email</TextBlock>
        <TextBox Padding="3" Margin="5" Text="{Binding ElementName=self, Path=User}"/>
        <Button Width="80" Padding="3" Margin="5" Name="OK" Click="OK_Click">OK</Button>
    </StackPanel>
</Window>
